{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "forin": true,
        "jsdoc-format": true,
        "label-position": true,
        "member-ordering": true,
        "no-arg": true,
        "no-construct": true,
        "no-eval": true,
        "no-unused-expression": true,
        "no-var-keyword": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "interface-name": false,
        "no-consecutive-blank-lines": false,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "no-trailing-whitespace": false,
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "no-console": false,
        "member-access": false
    }
}
